<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ShopEntities.ClientEntity" table="Client" schema="shop_schema">
        <id name="id">
            <column name="ID" sql-type="int(11)"/>
        </id>
        <property name="login">
            <column name="Login" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="cPassword">
            <column name="cPassword" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="email">
            <column name="Email" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="firstName">
            <column name="FirstName" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="secondName">
            <column name="SecondName" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="birthday">
            <column name="Birthday" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>